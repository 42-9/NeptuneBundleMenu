{% import _self as recursiveMacro %}
{% macro recursivePage(page,first) %}
    {% import _self as self %}
    {% if page.remove == 0 %}
        <li class="dd-item" data-id="{{ page.id }}">
            <div class="dd-handle">
                <a href="{{ path('admin_entity_active',{'id':page.id,'type':app.request.attributes.get('type')}) }}">
                    {% if page.active %}
                        <i class="fa fa-check text-success"></i>
                    {% else %}
                        <i class="fa fa-times text-danger"></i>
                    {% endif %}
                </a>
                {% if first %}
                    <i class="fa fa-home"></i>
                {% endif %}
                {{ page.name }}
            </div>
            {% if page.childs |length %}
                <ol class="dd-list">
                    {% for child in page.childs %}
                        {{ self.recursivePage(child) }}
                    {% endfor %}
                </ol>
            {% endif %}
        </li>
    {% endif %}
{% endmacro %}

