<div style="{{ (iframe is defined) ? 'min-width:90vw'  }}" class="question">
    <h1>{{ questionTitle }}</h1>
    {{ form_start(form) }}
    {% for widget in form %}
        <div class="form-group">
            {% if widget.vars.block_prefixes[1] not in  ['hidden','repeated','color']  %}
                <label class="block">
                    {{ form_label(widget) }}
                </label>
            {% endif %}
                {% if widget.vars.attr['data-color'] is defined %}
                        <span style="height:30px;width:80px;border:1px solid #000;margin-right: 1px;display: inline-block;background-color:{{ widget.vars.attr['data-color'] }};"></span>
                {% endif %}
                {% if not widget.vars.submitted and widget.vars.attr['data-color'] is defined%}
                    {{ form_widget(widget,{'attr':{'value':widget.vars.attr['data-color']}}) }}
                {% else %}
                    {{ form_widget(widget) }}
                {% endif %}
                {% if widget.vars.attr['data-color'] is defined %}
                    <button class="switch_imput">Switcher</button>
                    {{ widget.vars.attr['data-color'] }}
                {% endif %}
            {% if widget.vars.block_prefixes[1] != 'submit' and widget.vars.block_prefixes[1] != 'hidden' %}
                {{ form_errors(widget) }}
            {% endif %}
        </div>
    {% endfor %}
    {{ form_rest(form) }}
    {{ form_errors(form) }}

    {% if iframe is defined %}
        <div class="">
            <h2>Appercu de la zone</h2>
            <iframe src="{{ iframe }}" style="width:100%;height:60vh;display:block;"></iframe>
        </div>
    {% endif %}
    <button type="submit" class="btn">Valider</button>
    {{ form_end(form) }}

</div>
<html><body></body></html>