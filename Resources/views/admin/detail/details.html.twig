{% extends app.request.XmlHttpRequest ? '@ScyLabsNeptune/admin/ajax.html.twig' : '@ScyLabsNeptune/admin/layout.html.twig' %}

{% block css %}
{% endblock css %}

{% block js %}

    <script src="{{ asset('bundles/scylabsneptune/admin/js/lib/tinymce/tinymce.min.js') }}"></script>
    <script src="{{ asset('bundles/scylabsneptune/admin/js/tinyinit.js') }}"></script>

{% endblock js %}

{% block content %}
    <div class="row">
        {{ parent() }}
        <div class="col-lg-12">
            <div class="tabs">
                {% if collection is defined %}
                    <ul class="onglets">
                        {% for key, tab in collection %}
                            <li><a href="#tabs-{{ loop.index }}">{{ key }}</a></li>
                        {% endfor %}
                    </ul>
                    {% for key, tab in collection %}
                        <div id="tabs-{{ loop.index }}">
                            <div class="card">
                                {% for object in tab %}
                                    {% set form = tab['form'] %}
                                    {% include '@ScyLabsNeptune/admin/form.html.twig' %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}